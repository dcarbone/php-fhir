        </testsuite>
        <testsuite name="R5-Unit">
            <directory>./output/HL7/FHIR/R5/PHPFHIRTests/Unit</directory>
        </testsuite>
        <testsuite name="R5-Integration">
            <directory>./output/HL7/FHIR/R5/PHPFHIRTests/Integration</directory>
        </testsuite>
    </testsuites>
</phpunit>
